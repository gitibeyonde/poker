<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
 
    android:background="@drawable/lobby_bg"
       android:paddingLeft="25px"
    android:paddingTop="20px"
    android:keepScreenOn="true">
   
	 <LinearLayout 
	 		android:layout_width="fill_parent"
    		android:layout_height="wrap_content">
  			<LinearLayout 
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:gravity="center_vertical" 
				android:paddingLeft="10px">
				<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="60px">
					<TextView 
							android:text="Lobby" 
							android:layout_width="wrap_content"	
							android:layout_height="wrap_content" 
							android:linksClickable="true" 
							android:textSize="27px" 
							android:textColor="#ffffff" 
							android:id="@+id/lobbyTV"
							/>		
				</TableRow>	
		  		<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" >
						<TextView 
								android:text="COLERTY " 
								android:layout_width="fill_parent"	
								android:layout_height="wrap_content" 
								android:id="@+id/userNameLobby"	
								android:linksClickable="true" 
								android:textSize="16px" 
								android:gravity="left"
								android:textColor="#BFD7EF" android:paddingTop="5px"/>		
				</TableRow>		
			</LinearLayout>
			<LinearLayout 
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:gravity="top" android:paddingLeft="74px">
				<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" >
					<TextView 
						android:text="@string/playersonline" 
						android:id="@+id/playerstextviewlobby" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:textColor="#6D6E71" android:textSize="16px"/>	
				</TableRow>
				<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"  android:paddingTop="5px">
					<TextView
							android:text="00000 " 
							android:id="@+id/playersonlinelobby" 
							android:layout_width="fill_parent"	
							android:layout_height="wrap_content"
					 		android:textSize="24px"   
					 		android:textColor="#ffffff"
					 		android:gravity="center_horizontal"/>		
				</TableRow>
			</LinearLayout>
	</LinearLayout>
	 <TableRow  android:layout_width="fill_parent" android:layout_height="fill_parent">
 	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:gravity="center_vertical" android:paddingTop="5px" >
			
			<LinearLayout 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal">
			<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="fill_parent"
					    android:orientation="vertical"
					    android:gravity="center_vertical"
					    android:paddingLeft="5px">
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="6px">
					<Spinner 
				        android:id="@+id/cardgametypespinner"
				        android:layout_width="240px"
				        android:layout_height="39px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/cardgametype"
				        android:fadingEdgeLength="50px"
				         
				        
				       	/>
     		</TableRow>
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="3px">
					<Spinner 
				        android:id="@+id/gametypespinner"
				        android:layout_width="240dp"
				        android:layout_height="39px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/gametype"
				        android:fadingEdgeLength="50px" 
				       	/>
     		</TableRow>
     			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="3px">
					<Spinner 
				        android:id="@+id/moneytypespinner"
				        android:layout_width="240dp"
				        android:layout_height="39px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/moneytype"
				        android:fadingEdgeLength="50px" 
				       	/>
     		</TableRow>
     			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="3px">
					<Spinner 
				        android:id="@+id/moneyspinner"
				        android:layout_width="240dp"
				        android:layout_height="39px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/money"
				        android:fadingEdgeLength="50px" 
				       />
     		</TableRow>
     		<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
     		<LinearLayout 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:gravity="right" 
						android:orientation="horizontal">
					<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="10px" android:paddingTop="5px" >
							<Button 
								android:text="@string/cancelvalue" 
								android:id="@+id/cancellobbyB" 
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:background="@drawable/cancel_bg"
								 android:textColor="#939598"
								 android:textSize="14px"
								 />
					</TableRow>
				 	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" >
							<Button 
								android:text="@string/playvalue"
								android:id="@+id/playlobbyB" 
								android:layout_width="wrap_content"   
								android:layout_height="wrap_content"
								android:background="@drawable/bbutton_bg"
								android:paddingLeft="10px"
								android:textColor="#ffffff" 
								android:textStyle="bold"
								android:textSize="16px" />
					</TableRow>
				</LinearLayout>
			</TableRow>
		</LinearLayout>
		<LinearLayout 
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:orientation="vertical"
					    android:gravity="right"
					    android:paddingRight="33px">
		<TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content"  android:paddingLeft="15px">
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView
						 android:text="Betting Type" 
						  android:layout_width="wrap_content"  
						  android:layout_height="wrap_content"
						  android:textColor="#ff333333"
						  android:textSize="16px"  />
			</TableRow>
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" >
					<Spinner 
				        android:id="@+id/bettingtypespinner"
				        android:layout_width="124px"
				        android:layout_height="33px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/betting"
				        />
     		</TableRow>
     		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView 
						  android:text="Table Seats" 
						  android:layout_width="wrap_content"  
						  android:layout_height="wrap_content" 
						  android:textColor="#ff333333"
						  android:textSize="16px"  />
			</TableRow>
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<Spinner 
					        android:id="@+id/tableseatspinner"
					        android:layout_width="124px"
					        android:layout_height="33px"	
					        android:drawSelectorOnTop="true"
					        android:prompt="@string/tableseates"
					        android:fadingEdgeLength="50px" 
					       	/>
     		</TableRow>
     		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView 
						  android:text="Min. Opponents " 
						  android:layout_width="wrap_content"  
						  android:layout_height="wrap_content"  
						  android:textSize="16px"   
						  android:gravity="left"
						  android:textColor="#ff333333"/>
			</TableRow>
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" >
					<Spinner 
				        android:id="@+id/minopponentspinner"
				        android:layout_width="124px"
				        android:layout_height="33px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/opponets"/>
     		</TableRow>
     		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:text="Flop % " 
							  android:layout_width="wrap_content"  
							  android:layout_height="wrap_content" 
							  android:textColor="#ff333333"
							  android:textSize="16px"  />
			</TableRow>
			<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<Spinner 
				        android:id="@+id/flopspinner"
				        android:layout_width="124px"
				        android:layout_height="33px"	
				        android:drawSelectorOnTop="true"
				        android:prompt="@string/flop"
				        android:fadingEdgeLength="50px" 
				       	/>
     		</TableRow>
		</TableLayout>
		</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	</TableRow>
			<!-- <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="left|bottom">
			
				<TextView 
					android:text="poker.bluespade v 1.4" 
					android:layout_width="wrap_content"	
					android:layout_height="wrap_content" 
					android:textSize="12dip" 
					android:paddingTop="2px"/>
			</TableRow> -->
</LinearLayout>
