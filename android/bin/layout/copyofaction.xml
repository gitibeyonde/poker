<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingTop="10dip"
				android:paddingBottom="0dip" android:paddingLeft="30dip">
			<ImageView android:id="@+id/actionAvatar" android:maxWidth="40px" android:maxHeight="60px" 
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:src="@drawable/i1"></ImageView>
			
			<TableLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="20dip">
				<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView  android:id="@+id/actionLevel" android:text="Level 1" android:layout_width="255dip"  
						android:layout_height="wrap_content"></TextView>
					<!--  ImageView android:id="@+id/actionAvatar" android:layout_width="wrap_content" android:layout_height="wrap_content" 
						android:src="@drawable/i1"  android:maxWidth="15px" android:maxHeight="15px" ></ImageView -->
					<TextView  android:id="@+id/actionSilver" android:text="998" android:layout_width="wrap_content"  
						android:layout_height="wrap_content"></TextView>
				</TableRow>
				<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView  android:id="@+id/actionName" android:text="-name-" android:layout_width="255dip"  
						android:layout_height="wrap_content"></TextView>
					<!-- ImageView android:id="@+id/actionAvatar" android:layout_width="wrap_content" android:layout_height="wrap_content" 
						android:src="@drawable/i1"  android:maxWidth="15px" android:maxHeight="15px"></ImageView -->
					<TextView  android:id="@+id/actionGold" android:text="0" android:layout_width="wrap_content"  
						android:layout_height="wrap_content"></TextView>
				</TableRow>
			</TableLayout>
	
</LinearLayout>
	
	<TableLayout  android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:paddingLeft="70px" android:paddingTop="0px">
	
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="Play Now" android:id="@+id/actionPlayNowB" android:layout_width="255dip" android:layout_height="37px" ></Button>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="Public Games" android:id="@+id/actionLobbyB"  android:layout_width="255dip" android:layout_height="37px" ></Button>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="Private Games" android:id="@+id/actionPrivGameB" android:layout_width="255dip" android:layout_height="37px" ></Button>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="Invite Friends" android:id="@+id/actionInviteB" android:layout_width="255dip" android:layout_height="37px" ></Button>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="Refill Silver" android:id="@+id/actionRefillB" android:layout_width="255dip" android:layout_height="37px" ></Button>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="Back" android:id="@+id/actionBackB" android:layout_width="255dip" android:layout_height="37px" ></Button>
		</TableRow>
		
	</TableLayout>
	
	
</LinearLayout>
