<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/refer_a_friend_bg"
    android:keepScreenOn="true">
 		  <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:paddingTop="18px"
		    android:paddingLeft="32px">
		 		 <TableRow	android:layout_width="fill_parent" 	android:layout_height="wrap_content">
						<TextView android:text="@string/referafriend" 
								  android:layout_width="fill_parent"  
								  android:layout_height="wrap_content" 
								  android:textColor="#ffffff" 
								  android:textSize="27px" 
								  android:id="@+id/referafriend"/>
				</TableRow>
				<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="5px" >
								<TextView 
										android:text="" 
										android:layout_width="fill_parent"	
										android:layout_height="wrap_content" 
										android:id="@+id/usernameRef"	
										android:linksClickable="true" 
										android:textSize="16px" 
										android:gravity="left"
										android:textColor="#BFD7EF" />		
				</TableRow>
		</LinearLayout>
		 <TableRow  android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingTop="37px">
		 <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		     android:gravity="center_horizontal">
			     <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
					<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView	
									android:id="@+id/invitemessage"
									android:text="@string/invite"
									android:layout_width="340px" 
									android:layout_height="wrap_content"  
									android:textColor="#000000" 
									android:textSize="16px" />
					</TableRow>
					<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" >
						<TextView android:text="" 
									android:id="@+id/statusTV"
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"  
									android:textColor="#EC2127" 
									android:textSize="14px" 
									android:paddingTop="2px"
									android:paddingBottom="2px"/>
					</TableRow>
					<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
						<EditText 
								android:hint="@string/friendemailaddress" 
								android:id="@+id/inviteEmail1"  
								android:layout_width="300px" 
								android:layout_height="wrap_content"  
								android:singleLine="true" 
								android:scrollHorizontally="true"  
								android:textColor="#BCBEC0"
								android:textSize="16px"/>
					</TableRow>
					<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center_horizontal" android:paddingTop="5px">
					<LinearLayout 
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								
								android:orientation="horizontal">
							<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="10px" android:paddingTop="5px">
									<Button 
										android:text="@string/cancelvalue" 
										android:id="@+id/inviteCancelB" 
										android:layout_width="wrap_content" 
										android:layout_height="wrap_content" 
										android:background="@drawable/cancel_bg"
										 android:textColor="#939598"
										 android:textSize="14px"
										 />
							</TableRow>
						 	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" >
									<Button 
										android:text="@string/okvalue"
										android:id="@+id/inviteSubmitB" 
										android:layout_width="wrap_content"   
										android:layout_height="wrap_content"
										android:background="@drawable/bbutton_bg"
										android:paddingLeft="10px"
										android:textColor="#ffffff" 
										android:textStyle="bold"
										android:textSize="16px" />
							</TableRow>
						</LinearLayout>
						</TableRow>
				</LinearLayout>
		</LinearLayout>
	</TableRow>

